# FastAPI Application Settings
PROJECT_NAME="Physical AI & Humanoid Robotics Textbook API"
API_V1_STR="/api/v1"

# Database Settings (Neon Serverless Postgres)
# Get your connection string from https://neon.tech/
DATABASE_URL="postgresql://user:password@ep-xxx.region.aws.neon.tech/dbname?sslmode=require"

# Qdrant Cloud Settings
# Get your credentials from https://cloud.qdrant.io/
QDRANT_URL="https://your-cluster-id.region.aws.cloud.qdrant.io:6333"
QDRANT_API_KEY="your_qdrant_api_key"

# OpenAI Settings (optional, not currently used)
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY="sk-your_openai_api_key"

# Google Gemini Settings (Required for chatbot and embeddings)
# Get your API key from https://aistudio.google.com/app/apikey
GOOGLE_API_KEY="your_google_api_key"

# Auth Settings (JWT)
SECRET_KEY="your-super-secret-key-change-this-in-production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
